<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/white_edittext"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_dialog_placeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="26dp"
        android:textColor="#4472c4"
        android:fontFamily="@font/tmoney_bold"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="장소 이름" />

    <EditText
        android:id="@+id/editText_dialog_placeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="26dp"
        android:fontFamily="@font/tmoney_bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView_dialog_placeTitle"
        android:layout_toRightOf="@+id/textView_dialog_placeTitle"
        android:ems="10"
        android:completionThreshold="1"
        android:padding="5dp"
        android:textSize="20dp"
        android:hint="ex) 역 이름"
        android:background="@drawable/white_edittext"
        android:inputType="textPersonName"
        android:text="" />


    <Button
        android:id="@+id/button_dialog_placeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_dialog_placeTitle"
        android:layout_alignEnd="@+id/editText_dialog_placeTitle"
        android:layout_alignRight="@+id/editText_dialog_placeTitle"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:textColor="#4472c4"
        android:fontFamily="@font/tmoney_bold"
        android:layout_marginBottom="10dp"
        android:text="완료"
        android:textSize="18dp" />

</RelativeLayout>