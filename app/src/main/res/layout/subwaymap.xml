<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/subwaymap"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/tmoney_bold"
            android:text="지하철 노선도"
            android:textAlignment="center"
            android:textColor="#4472c4"
            android:textStyle="bold"
            android:textSize="30dp"
            ></TextView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/subwaymap"></ImageView>
    </LinearLayout>

        <View
            android:id="@+id/viewline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#000000" />


    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/subwaymap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/tmoney_bold"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="노선도 선택" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabsubway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:backgroundTint="#ffffff"
            android:clickable="true"
            android:src="@drawable/floating1"
            app:fabSize="auto"
            app:maxImageSize="56dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_above="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textsudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/tmoney_bold"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="수도권 노선도" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabsudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/subwaymap"
            app:fabSize="mini" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_above="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textkwangju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/tmoney_bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="광주 노선도" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabkwangju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            android:src="@drawable/subwaymap"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_above="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textdaejeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/tmoney_bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="대전 노선도" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabdaejeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            android:src="@drawable/subwaymap"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_above="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textdaegu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:fontFamily="@font/tmoney_bold"
            android:textStyle="bold"
            android:text="대구 노선도" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabdaegu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            android:src="@drawable/subwaymap"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_above="@+id/layout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textbusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/tmoney_bold"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="부산 노선도" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabbusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            android:src="@drawable/subwaymap"/>


    </LinearLayout>












</RelativeLayout>